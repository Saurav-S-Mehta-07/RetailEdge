<% layout("layouts/boilerplateCode")%>
<div class="container">
 
  <%- include("../includes/leftNav.ejs") %>

  <div class="main-page">
    <div class="content">
    
       <h1 style="text-align:center; width: 100%;;">My Orders</h1>

      <div class="content-cards cards">

        <% if (orders && orders.length > 0) { %>
          <% for(let order of orders){ %>
            <a href="/main/show/<%=order.item%>" class="item-links">
              <div class="content-card card" type="button">
                
                <!-- Delete Button -->
                <form class="dlt-btn-form" action="/main/order/<%= order._id %>?_method=delete" method="post">
                  <button type="submit" class="dlt-btn">Delete</button>
                </form>

                <!-- Item Image -->
                <img class="content-card-img cards-img" src="/uploads/<%=order.image%>" alt="<%=order.title%>">

                <!-- Item Details -->
                <h4><%= order.title %></h4>
                <p>Qty: <%= order.quantity %></p>
                <p class="text-success fw-bold">â‚¹<%= order.price %></p>
                <small class="text-muted">Ordered on: <%= new Date(order.orderedAt).toLocaleDateString() %></small>
              </div>
            </a>
          <% } %>
        <% } else { %>
          <p class="text-center mt-5 fs-5">No orders found.</p>
        <% } %>

      </div>

    </div>
  </div>

</div>
